<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
        <!-- 同時タッチを無効にする設定
        ※ここで設定しても効かない端末あるいはOSがあるため、個別に設定する必要もあるが、
        効果は大きいため、アプリ全体のテーマとしても設定しておく-->
        <item name="android:splitMotionEvents">false</item>

        <item name="android:fallbackLineSpacing">false</item>
    </style>

    <style name="SpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">@color/lineGray</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="DetailContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="DetailDotDivider">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="DetailContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="GenreListTitleText">
        <item name="android:background">#2e2e2e</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">13dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

</resources>
